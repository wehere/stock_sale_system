<div class="row">
  <div class="col-sm-2" >
    <%= link_to @pre_order.blank? ? '向前没有了' : '上一天', @pre_order.blank? ? '#' : purchase_order_path(@pre_order.id), class: 'btn-primary btn' %>
  </div>
  <div class="col-sm-2">
    <%= link_to @next_order.blank? ? '向后没有了' : '下一天', @next_order.blank? ? '#' : purchase_order_path(@next_order.id), class: 'btn-primary btn' %>
  </div>
  <div class="col-sm-4">
    <%= form_tag purchase_orders_path, method: :post do %>
        <%= hidden_field_tag 'supplier_id', @order.supplier_id %>
        <%= hidden_field_tag 'store_id', @order.store_id %>
        <%= hidden_field_tag 'query_date', @order.reach_order_date %>
        <%= submit_tag "#{@order.supplier.simple_name}送到#{@order.store.name}的#{@order.reach_order_date.month}月单据", class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= form_tag purchase_orders_path, method: :post do %>
        <%= hidden_field_tag 'query_date', @order.reach_order_date %>
        <%= submit_tag "#{@order.reach_order_date.month}月所有单据", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>