<table class="table table-striped table-condensed table-hover">
  <tr>
    <th width="150">品名</th><th width="80">订货量</th><th width="100">到货量</th><th width="80">价格</th><th>金额小计</th>
  </tr>
  <% @order_items.each do |order_item| %>
    <tr>
      <td>
        <%= order_item.product_chinese_name %>
      </td>
      <td>
        <%= order_item.plan_weight %>
      </td>
      <td>
        <%= order_item.real_weight == 0 ? '' : order_item.real_weight %>
      </td>
      <td>
        <%= order_item.real_price %>
      </td>
      <td>
        <%= order_item.money %>
      </td>
    </tr>
  <% end %>
  <tr><td><h4>总金额</h4></td><td></td><td></td><td></td><td><h4><%= @sum_money %></h4></td></tr>
</table>