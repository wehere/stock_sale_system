<div class="row"><div class="col-md-offset-2 col-md-2 text-right"> <h2>忘记密码?</h2></div></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row"><div class="col-md-offset-2 col-md-8"><%= devise_error_messages! %></div></div>

  <div class="row"><div class="col-md-offset-2 col-md-1 text-right"><%= f.label :邮箱 %></div>
  <div class="col-md-1"><%= f.email_field :email, autofocus: true %></div></div>
  <br/>
  <div class="row"><div class="col-md-offset-2 col-md-2 text-right"><%= f.submit "重置密码", class: 'btn btn-primary' %></div></div>
<% end %>
<br/>

<div class="row">
  <div class="col-md-offset-2 col-md-1 text-right">
    <%= render "devise/shared/links" %>
  </div>
</div>
