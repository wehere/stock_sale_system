<br/>
<%= form_for @product, url: supply_product_path(@product.id), method: :patch do |f| %>
  <div class="row">
    <div class="columns small-2 text-right">
      <%= f.label '中文名称' %>
    </div>
    <div class="columns small-10">
      <%= f.text_field :chinese_name %>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="columns small-2 text-right">
      <%= f.label '英文名称' %>
    </div>
    <div class="columns small-10">
      <%= f.text_field :english_name %>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="columns small-2 text-right">
      <%= f.label '缩写' %>
    </div>
    <div class="columns small-10">
      <%= f.text_field :simple_abc %>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="columns small-2"></div>
    <div class="columns small-3">
      <%= submit_tag '提交更改', class: 'button primary' %>
    </div>
  </div>
<% end %>