<div class="cxp_min_width">
<h3>更改供应商</h3>
<div class="row">
  <div class="col-sm-3 text-right">
    <label class="inline">进货单据日期</label>
  </div>
  <div class="col-sm-9">
    <label class="inline"><%= @purchase_order.purchase_date.to_date %></label>
  </div>
</div>

<%= form_tag "/supply/purchase_orders/#{@purchase_order.id}/update_seller", method: :post do %>
    <div class="row">
      <div class="col-sm-3 text-right">
        <label class="inline">供应商</label>
      </div>
      <div class="col-sm-9">
        <%= select_tag :seller_id, options_from_collection_for_select(@sellers, 'id', 'name', params[:seller_id]||(@sellers.first.id rescue '')) %>
      </div>
    </div>
      <br/>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-4 end">
        <%= submit_tag '提交', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
</div>