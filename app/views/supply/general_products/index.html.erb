<br/>
<%= link_to '创建通用产品', new_supply_general_product_path, class: 'btn btn-primary' %>
<br/>
<br/>
<%= form_tag supply_general_products_path, method: :get do %>
    <div class="row">
      <div class="col-sm-2 text-right">
        <label>通用产品名称</label>
      </div>
      <div class="col-sm-2">
        <%= text_field_tag 'name', @name %>
      </div>
      <div class="col-sm-2">
        <%= submit_tag '查询', class: 'btn btn-primary' %>
      </div>
    </div>
    <table class="table">
      <thead>
      <th>通用产品ID</th>
      <th>通用产品名称</th>
      <th>卖货人</th>
      <th>标准单位</th>
      <th>操作</th>
      </thead>
      <tbody>
      <% @general_products.each do |general_product| %>
          <tr>
            <td><%= general_product.id %></td>
            <td><%= general_product.name %></td>
            <td><%= select "vendor_#{general_product.id}", options_from_collection_for_select(@vendors, 'to_s', 'to_s', general_product.vendor), onchange: "change_vendor(#{general_product.id})" %></td>
            <td><%= general_product.mini_spec rescue '' %></td>
            <td><%= link_to '编辑', edit_supply_general_product_path(general_product.id), target: "_blank" %></td>
            <td><%= link_to '关联卖货人', "/supply/general_products/prepare_link_to_seller?general_product_id=#{general_product.id}", target: '_blank' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @general_products, :class => 'flickr_pagination', :previous_label => '上一页', :next_label => '下一页' %>
<% end %>
<script language="javascript">
    function change_vendor(g_p_id){
        $.ajax({
            url: '/supply/general_products/vendor',
            type: 'post',
            data: {
                "general_product_id": g_p_id,
                "vendor": $("#vendor_" + g_p_id).val()
            },
            dataType: 'text'
        })
    }
</script>