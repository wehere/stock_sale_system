<div class="cxp_min_width">
<br/>
<h3>导出客户月清单</h3>
<%= form_tag export_order_total_for_specified_days_supply_sheets_path, method: :post do %>
    <span>起始日期</span>
    <%= date_field_tag 'start_date', @start_date, class: 'sx-display-inline sx-width-auto'  %>
    <span>结束日期</span>
    <%= date_field_tag 'end_date', @end_date, class: 'sx-display-inline sx-width-auto'  %>
    <span>单位</span>
    <% unless @customers.blank? %>
      <%= select_tag 'customer_id', options_from_collection_for_select(@customers, 'id', 'simple_name', @customer_id), id: "customers_select", class: 'sx-display-inline sx-width-auto'  %>
    <% end %>
    <span>门店</span>
    <% unless @stores.blank? %>
      <span id="store_select"><%= select_tag 'store_id', options_from_collection_for_select(@stores, 'id', 'name', @store_id), class: 'sx-display-inline sx-width-auto'%></span>
    <% end %>
    <%= submit_tag '导出', class: 'button primary' %>
<% end %>

<script>
    $( "#customers_select")
        .change(function(){
            $.ajax({
                type: 'POST',
                url: "/supply/sheets/"+$(this).val()+"/change_stores/",
                dataType: 'script'
            });
        }).change();
</script>

