<div class="row">
  <div class="col-sm-2" >
    <%= link_to @pre_order.blank? ? '向前没有了' : '上一张', @pre_order.blank? ? '#' : edit_supply_order_path(@pre_order.id), class: 'btn-primary btn' %>
  </div>
  <div class="col-sm-2">
    <%= link_to @next_order.blank? ? '向后没有了' : '下一张', @next_order.blank? ? '#' : edit_supply_order_path(@next_order.id), class: 'btn-primary btn' %>
  </div>
  <div class="col-sm-4">
    <%= form_tag supply_orders_path, method: :post do %>
        <%= hidden_field_tag 'customer_id', @order.customer_id %>
        <%= hidden_field_tag 'store_id', @order.store_id %>
        <%= hidden_field_tag 'date_start', @order.reach_order_date.at_beginning_of_month %>
        <%= hidden_field_tag 'date_end', @order.reach_order_date.at_end_of_month %>
        <%= submit_tag "#{@order.customer.simple_name}#{@order.store.name}#{@order.reach_order_date.month}月单据", class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= form_tag supply_orders_path, method: :post do %>
        <%= hidden_field_tag 'date_start', @order.reach_order_date.at_beginning_of_month %>
        <%= hidden_field_tag 'date_end', @order.reach_order_date.at_end_of_month %>
        <%= submit_tag "#{@order.reach_order_date.month}月所有单据", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<br/>


